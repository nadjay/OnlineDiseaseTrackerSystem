{% extends 'base.html.twig' %}



{% block header %}
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('homepage') }}"> We Care </a>
                </div>

                <ul class="navbar navbar-nav">
                    <li><a class="active" href="{{ path('initial_login') }}"><span class="glyphicon glyphicon-log-in"></span> Log In</a></li>

                </ul>

            </div>
        </nav>
    </header>

{% endblock %}

{% block body_id 'login' %}


{% block main %}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-4">
                <img src="images/side1.png" class="img-responsive" style="width:100%" alt="Image">
            </div>
            <div class="col-sm-6">
                <hr>
                <h3 class="text-center">
                    Login to continue
                    <hr>
                </h3>
                <div class="well">
                    <form action="{{ path('security_login_check') }}" method="post">
                        <fieldset>
                            <legend><i class="fa fa-lock"></i> Enter login details below </legend>
                            <div class="form-group">
                                <label for="username"> User name</label>
                                <input type="text" id="username" name="_username" value="" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label for="password"> Password</label>
                                <input type="password" id="password" name="_password" value="" class="form-control" />
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <input type="hidden" name="_target_path" value="patient_new">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-sign-in"></i> Sign in
                            </button>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="col-sm-4">
                <br>
                <br>
                <img src="images/image3.png" class="img-responsive" style="width:100%" alt="Image">
            </div>
        </div>
    </div>


{% endblock %}
{% block sidebar %}
{% endblock %}

{% block javascripts %}

{% endblock %}
