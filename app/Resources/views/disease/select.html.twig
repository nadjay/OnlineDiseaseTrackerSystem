{% extends 'base.html.twig' %}

{% block header %}

    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand"> We Care </a>
                </div>
                <div class="pull-right">
                    <ul class="navbar navbar-nav">
                        <li><a class="active" href="{{ path('select_disease') }}"> Select A Disease </a></li>
                        <li><a href="{{ path('admin_homepage') }}" ><span class="glyphicon glyphicon-home"></span> Home</a></li>
                        <li><a href="{{ path('security_logout') }}"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

{% block body_id 'select_disease' %}

{% block main %}
    <h3 class="text-center" >Select a disease to continue <span class="glyphicon glyphicon-hand-down -lg"></span></h3>
    <br>
    <br>
    <br>
    {% if form is defined %}
        {% form_theme form 'bootstrap_3_layout.html.twig' %}
        <div class="container">
            <div class="well">

                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
    {% endif %}
{% endblock %}



