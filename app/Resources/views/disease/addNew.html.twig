{# disease/addNew #}
{% extends 'base.html.twig' %}

{% block header %}

    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <li><a> We Care </a></li>
                </div>
                <div class="pull-right">
                    <ul class="navbar navbar-nav">
                        <li ><a class="active" href="{{ path('new_disease') }}"><span class="glyphicon glyphicon-plus-sign"></span> add new disease</a></li>
                        <li><a href="{{ path('admin_homepage') }}" ><span class="glyphicon glyphicon-home"></span> Home</a></li>
                        <li><a href="{{ path('security_logout') }}"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

{% endblock %}

{% block body_id 'new_disease' %}

{% block main %}
    {% if form is defined %}
        <h3 class="text-center">Enter disease details <span class="glyphicon glyphicon-hand-down"></span> </h3>
        <hr>
        {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
        <div class="col-sm-11">
            <div class="well">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.gender) }}
                {{ form_row(form.minAge) }}
                {{ form_row(form.maxAge) }}
                {{ form_row(form.severity) }}
                {{ form_row(form.description) }}
                <br>
                <br>
                {{ form_end(form) }}




            </div>
        </div>
    {% else %}
    {% endif %}





{% endblock %}



{% block javascripts %}

{% endblock %}