{% extends 'base.html.twig' %}

{% block header %}

    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <li><a> We Care </a></li>
                </div>
                <ul class="navbar navbar-nav"></ul>
                <div class="pull-right">
                    <ul class="navbar navbar-nav">
                        <li><a class="active"><i class="fa fa-stethoscope"></i> Possible Diagnoses </a></li>
                        <li><a href="{{ path('patient_homepage') }}" ><span class="glyphicon glyphicon-home"></span> Home</a></li>
                        <li><a href="{{ path('security_logout') }}"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

{% block body_id 'enter_symptoms' %}

{% block main %}
<div class = 'container'>
    <div class="alert alert-info text-center">
        <strong>For your information!</strong> The progress bar indicates the probability of you having the disease.
    </div>
    <table class = "table table-stripped table-hover">
        <thead>
            <tr class = 'danger'>
                <th colspan = "4" class='text-center'>High Risk </th>
            </tr>
        </thead>
        <tbody>
            {%for disease in HIGH_RISK %}
                <tr class = "active">
                    <th class = "col-md-2 text-center">{{disease.name}}</th>
                    <td class="col-md-1">
                        <div class="progress">
                            <div class="progress-bar progress-bar-danger col-sm-2" role="progressbar" aria-valuenow="7" aria-valuemin="0" aria-valuemax="10" style="width:{{ disease.prob }}%">

                            </div>
                        </div>
                    </td>
                    <td class="col-md-8 text-center">{{disease.description}}</td>
                    <td class='text-center'><a href="{{path('Find_Doctor', {'disease_id': disease.id})}}" class="btn btn-danger">next step <span class="glyphicon glyphicon-arrow-right"></span></a></td>
                </tr>
            {% endfor %}
            <tr>
                <th colspan="4" class="text-center"></th>
            </tr>
        </tbody>

        <thead>
            <tr class = 'warning'>
                <th colspan = "4" class='text-center'>Medium Risk </th>
            </tr>
        </thead>
        <tbody>
            {%for disease in MEDIUM_RISK %}
                <tr>
                    <th class = "col-md-2 text-center">{{disease.name}}</th>
                    <td class="col-md-1">
                        <div class="progress">
                            <div class="progress-bar progress-bar-warning col-sm-2" role="progressbar" aria-valuenow="7" aria-valuemin="0" aria-valuemax="10" style="width:{{ disease.prob }}%">

                            </div>
                        </div>
                    </td>
                    <td class = 'col-md-8 text-center'>{{disease.description}}</td>
                    <td class= 'text-center'><a href="{{path('Find_Doctor', {'disease_id': disease.id})}}" class="btn btn-warning">next step <span class="glyphicon glyphicon-arrow-right"></span></a></td>
                </tr>
            {% endfor %}
            <tr>
                <th colspan="4" class="text-center"></th>
            </tr>
        </tbody>

        <thead>
            <tr class = 'success'>
                <th colspan = "4" class='text-center'>Low Risk </th>
            </tr>
        </thead>
        <tbody>
            {%for disease in LOW_RISK %}
                <tr class = "active">
                    <th class = "col-md-2 text-center">{{disease.name}}</th>
                    <td class="col-md-1">
                        <div class="progress">
                            <div class="progress-bar progress-bar-success col-sm-2" role="progressbar" aria-valuenow="7" aria-valuemin="0" aria-valuemax="10" style="width:{{ disease.prob }}%">

                            </div>
                        </div>
                    </td>
                    <td class = 'col-md-8 text-center'>{{disease.description}}</td>
                    <td class= 'text-center'><a href="{{path('Find_Doctor', {'disease_id': disease.id})}}" class="btn btn-success">next step <span class="glyphicon glyphicon-arrow-right"></span></a></td>
                </tr>
            {% endfor %}
            <tr>
                <th colspan="4" class="text-center"></th>
            </tr>
        </tbody>

        <thead>
            <tr class = 'info'>
                <th colspan = "4" class='text-center'>Risk not specified </th>
            </tr>
        </thead>
        <tbody>
            {%for disease in NOT_SPECIFIED %}
                <tr class = "active">
                    <th class = "col-md-2 text-center">{{disease.name}}</th>
                    <td class="col-md-1">
                        <div class="progress">
                            <div class="progress-bar progress-bar-info col-sm-2" role="progressbar" aria-valuenow="7" aria-valuemin="0" aria-valuemax="10" style="width:{{ disease.prob }}%">

                            </div>
                        </div>
                    </td>
                    <td class = 'col-md-8 text-center'>{{disease.description}}</td>
                    <td class= 'text-center'><a href="{{path('Find_Doctor', {'disease_id': disease.id})}}" class="btn btn-info">next step <span class="glyphicon glyphicon-arrow-right"></span></a></td>
                </tr>
            {% endfor %}
            <tr>
                <th colspan="4" class="text-center"></th>
            </tr>
        </tbody>
    </table>
</div>
    
{% endblock %}



